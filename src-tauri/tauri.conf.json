{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "mediabox",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "request": true,
        "scope": ["https://github.com/*"]
      },
      "fs": {
        "all": false,
        "createDir": true,
        "scope": ["$HOME/.mediabox", "$HOME/.mediabox/*", "$DOWNLOAD/*"],
        "writeFile": true
      },
      "shell": {
        "execute": true,
        "scope": [
          { "name": "yt-dlp", "cmd": "$HOME/.mediabox/yt-dlp", "args": true },
          { "name": "chmod", "cmd": "chmod", "args": true }
        ]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.vaaski.mediabox",
      "targets": "all"
    },
    "macOSPrivateApi": true,
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "mediabox",
        "width": 800,
        "height": 600,
        "transparent": true
      }
    ]
  }
}
