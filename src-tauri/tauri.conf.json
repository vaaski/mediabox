{
  "build": {
    "beforeBuildCommand": "pnpm build",
    "beforeDevCommand": "pnpm dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "mediabox",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true
      },
      "fs": {
        "all": false,
        "createDir": true,
        "exists": true,
        "readFile": true,
        "removeFile": true,
        "scope": ["$HOME/.mediabox", "$HOME/.mediabox/*", "$DOWNLOAD/*"]
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "execute": true,
        "scope": [
          { "args": true, "cmd": "ffmpeg", "name": "ffmpeg" },
          { "args": true, "cmd": "$HOME/.mediabox/ffmpeg", "name": "ffmpeg-local" },
          { "args": true, "cmd": "ffprobe", "name": "ffprobe" },
          { "args": true, "cmd": "$HOME/.mediabox/ffprobe", "name": "ffprobe-local" },
          { "args": true, "cmd": "yt-dlp", "name": "yt-dlp" },
          { "args": true, "cmd": "$HOME/.mediabox/yt-dlp", "name": "yt-dlp-local" },
          { "args": true, "cmd": "chmod", "name": "chmod" },
          { "args": true, "cmd": "which", "name": "which" },
          { "args": true, "cmd": "where", "name": "where" },
          { "args": true, "cmd": "unzip", "name": "unzip" }
        ]
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "show": true,
        "startDragging": true,
        "unmaximize": true,
        "unminimize": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.vaaski.mediabox",
      "targets": "all"
    },
    "macOSPrivateApi": true,
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 550,
        "hiddenTitle": true,
        "resizable": true,
        "title": "mediabox",
        "titleBarStyle": "Overlay",
        "transparent": true,
        "width": 830
      }
    ]
  }
}
